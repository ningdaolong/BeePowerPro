<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/COLOR_GRAY"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.app.activity.HongWaiActivit">
    <View
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/COLOR_TOP" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/COLOR_TOP"
        app:layout_heightPercent="8%h">

        <ImageView
            android:id="@+id/hongwai_img_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_left"
            app:layout_heightPercent="60%h"
            app:layout_marginLeftPercent="4%w"
            app:layout_widthPercent="35%h" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/hongwai_img_back"
            android:text="返回"
            android:textColor="#fcfdfe"
            app:layout_marginLeftPercent="2%w"
            app:layout_textSizePercent="40%h" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设备信息"
            android:textColor="#fcfdfe"
            app:layout_textSizePercent="50%h" />

    </com.zhy.android.percent.support.PercentRelativeLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hongwai_tv_dingwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定位"
            android:textColor="#000"
            app:layout_marginPercent="2%w"
            app:layout_textSizePercent="3%h" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_heightPercent="8%h">

            <Spinner
                android:id="@+id/hongwai_spinner1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="90%h"
                app:layout_widthPercent="45%w" />

            <Spinner
                android:id="@+id/hongwai_spinner2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="90%h"
                app:layout_marginLeftPercent="4%w"
                app:layout_widthPercent="45%w" />


        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_heightPercent="8%h">

            <Spinner
                android:id="@+id/hongwai_spinner3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="90%h"
                app:layout_widthPercent="45%w" />

            <Spinner
                android:id="@+id/hongwai_spinner4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="90%h"
                app:layout_marginLeftPercent="4%w"
                app:layout_widthPercent="45%w" />

        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_heightPercent="8%h"
            app:layout_marginTopPercent="1%h">


            <Spinner
                android:id="@+id/hongwai_spinner5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="90%h"
                app:layout_widthPercent="45%w" />

            <Spinner
                android:id="@+id/hongwai_spinner6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="90%h"
                app:layout_marginLeftPercent="4%w"
                app:layout_widthPercent="45%w" />

        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_heightPercent="8%h"
            app:layout_marginTopPercent="1%h">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="用户:"
                android:textColor="#717171"
                app:layout_marginLeftPercent="2%w"
                app:layout_textSizePercent="40%h" />

            <Spinner
                android:id="@+id/hongwai_spinner_Name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                app:layout_heightPercent="90%h"
                app:layout_marginLeftPercent="2%w"
                app:layout_widthPercent="50%w" />

        </com.zhy.android.percent.support.PercentLinearLayout>


        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_marginTopPercent="2%h">



            <Button
                android:id="@+id/hongwai_btn_hongwai"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="扫描红外二维码"
                android:textColor="#000"
                app:layout_heightPercent="14%h"
                app:layout_marginLeftPercent="2%w"
                app:layout_marginRightPercent="2%w"
                app:layout_marginTopPercent="2%h" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫描返回红外编号："
                android:textColor="#717171"
                app:layout_marginLeftPercent="2%w"
                app:layout_marginTopPercent="2%h"
                app:layout_textSizePercent="5%h" />

            <EditText
                android:id="@+id/hongwai_et_hongwaiMAC"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="#000"
                app:layout_heightPercent="14%h"
                app:layout_marginLeftPercent="2%w"
                app:layout_marginRightPercent="2%w"
                app:layout_marginTopPercent="2%h" />
            <Button
                android:id="@+id/hongwai_btn_chazuo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="扫描插座二维码"
                android:textColor="#000"
                app:layout_heightPercent="14%h"
                app:layout_marginLeftPercent="2%w"
                app:layout_marginRightPercent="2%w"
                app:layout_marginTopPercent="2%h" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫描返回插座编号："
                android:textColor="#717171"
                app:layout_marginLeftPercent="2%w"
                app:layout_marginTopPercent="2%h"
                app:layout_textSizePercent="5%h" />

            <EditText
                android:id="@+id/hongwai_et_chazuoMAC"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="#000"
                app:layout_heightPercent="14%h"
                app:layout_marginLeftPercent="2%w"
                app:layout_marginRightPercent="2%w"
                app:layout_marginTopPercent="2%h" />


            <Button
                android:id="@+id/hongwai_btn_tijiao"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="提交"
                android:textColor="#000"
                app:layout_heightPercent="14%h"
                app:layout_marginLeftPercent="2%w"
                app:layout_marginRightPercent="2%w"
                app:layout_marginTopPercent="2%h" />


        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
